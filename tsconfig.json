{
  "compilerOptions": {
    // build
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noEmit": true,
    // import
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // lint
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["__tests__", "*.ts"]
}
